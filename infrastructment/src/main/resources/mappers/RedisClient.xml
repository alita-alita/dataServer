<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.idicc.taotie.infrastructment.mapper.spider.NewsDao">

    <resultMap id="NewsMO" type="cn.idicc.taotie.infrastructment.entity.spider.News">
        <result column="id" property="id"/>
        <result column="u_key" property="uKey"/>
        <result column="url" property="url"/>
        <result column="source" property="source"/>
        <result column="title" property="id"/>
        <result column="content" property="id"/>
        <result column="publishing_date" property="publishingDate"/>

    </resultMap>

    <select id="countByUKey" parameterType="string" resultType="int">
        select count(1) from news
        where u_key = #{uKey}
    </select>

    <insert id="insert" parameterType="cn.idicc.taotie.infrastructment.entity.spider.News">
        insert into news(u_key, url, source, title, content, publishing_date)
        values(#{uKey}, #{url}, #{source}, #{title}, #{content}, #{publishingDate})
    </insert>

</mapper>
